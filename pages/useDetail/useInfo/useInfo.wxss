/* pages/useDetail/useInfo/useInfo.wxss */
page{
  background-color: #fff;
}
.ui-content-box{
  padding: 30rpx;
  box-sizing: border-box;
}
.ui-content-table{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  /* border-bottom: 1rpx dashed #CECECE; */
  position: relative;
}
.ui-content-table::after{
  content:'';
  position:absolute;
  top:0;
  left:0;
  width:200%;
  height:200%;
  transform:scale(.5);
  transform-origin:0 0;
  pointer-events:none;
  box-sizing:border-box;
  border:0 dashed #e9eaec;
  border-bottom-width:3rpx;
}
.pb-cr-txt-1{
  text-align: left;
  margin-bottom: 10rpx;
}
/* 步骤样式 */
.ui-content-cell{
  margin-bottom: 20rpx;
}
.step-icon{
  width: 40rpx;
  height: 50rpx;
  vertical-align: middle;
}
.step-title{
  font-size: 25rpx;
  margin-left: 15rpx;
  vertical-align: middle;
  line-height: 50rpx;
  font-weight: 500;
  color: #333333;
}
.step-img{
  width: 642rpx;
  height: 272rpx;
}
.ui-content-buy-table{
  display: flex;
  align-items: center;
  justify-items: center;
}
.ui-content-buy-cell-1 image{
  width: 324rpx;
  height: 272rpx;
}
.ui-content-buy-cell{
  margin-left: 15rpx;
}