/* pages/opfeedback/opfeedback.wxss */
@import "/component/upLoadImg/upLoadImg.wxss";
@import "/component/list_picker/list_picker.wxss";
.opf-box{
  background-color: #F8F6F9;
  padding-top: 30rpx;
  box-sizing: border-box;
  overflow-y: scroll;
  padding-bottom: 260rpx;
}
.opf-top-box{
  background-color: #fff;
  width: 690rpx;
  margin: 0 auto;
  padding:10rpx 30rpx 30rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}
/* 数据填写框 */
.opf-title{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.opf-title-main{
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 50rpx;
}
.opf-title-vice{
  color: #999999;
}
.opf-textarea-box{
  position: relative;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 46rpx;
}
.opf-textarea{
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #F7F7F7;
  border: 20rpx;
  width: 100%;
  height: 240rpx;
}
.opf-textarea-counter{
  position: absolute;
  right: 30rpx;
  bottom: 0rpx;
  line-height: 30rpx;
}
.opf-input{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #F7F7F7;
  width: 100%;
  height: 90rpx;
  line-height: 50rpx;
  border-radius: 15rpx;
}

.opf-phone-box{
  text-align: center;
  /* position: fixed;
  bottom: 188rpx; */
  align-items: center;
  width: 400rpx;
  margin-top: 60rpx;
  margin-left: 175rpx;
}
.opf-phone-img{
  width: 24rpx;
  height: 26rpx;
  margin-right: 20rpx;
}
.opf-bottom-box{
  width: 750rpx;
  position: fixed;
  background-color: #fff;
  padding: 30rpx 30rpx 60rpx;
  box-sizing: border-box;
  bottom: 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  z-index: 999;
}

/* top-info */
.opf-top-info-box{
  width: 690rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
}
.opf-cell-vice-box{
  height: 130rpx;
  background: #FFFFFF;
  border-radius: 8px;
  padding: 50rpx 20rpx;
}
.opf-cell-content-vice{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  
}
.opf-cell-content-both{
  margin-top: 50rpx;
  position: relative;
}
.opf-cell-cv-title{
  color: #999999;
}
.opf-cell-cv-detail{
  color: #333333;
}
.opf-cell-cv-btn{
  color: #333333;
  display: inline-block;
  border-radius: 20rpx;
  border: 2rpx solid #CCCCCC;
  padding: 2rpx 10rpx;
  position: absolute;
  right: 50rpx;
}
.opf-cell-cv-info{
  position: absolute;
  right: 28rpx;
}
/* 自定义list_picker的样式 */
.is-class{
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 50rpx;
}