<view class="input">
  <view class="input-item {{index < focusIndex ? 'border-color': ''}}" wx:for="{{valueLength}}" wx:key="index" data-index="{{index}}">
    <!-- <view class="input-value">{{password[index]}}</view> -->
    <view class="input-value">{{value[index]}}</view>
    <view class="focus {{index === focusIndex ? 'show': 'hide'}}"></view>
 </view>
 <input class="input-password" maxlength="4" bindinput="setValue" bindblur="inputBlur" type="number" focus="{{focus}}"></input></view>
