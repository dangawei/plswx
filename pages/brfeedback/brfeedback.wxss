/* pages/brfeedback/brfeedback.wxss */
@import "/component/upLoadImg/upLoadImg.wxss";
.brf-box{
  background-color: #F8F6F9;
  padding-top: 30rpx;
  box-sizing: border-box;
  overflow-y: scroll;
  padding-bottom: 260rpx;
}
.brf-top-box{
  background-color: #fff;
  width: 690rpx;
  margin: 0 auto;
  padding:10rpx 30rpx 30rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}
/* 数据填写框 */
.brf-title{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.brf-title-main{
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 50rpx;
}
.brf-title-vice{
  color: #999999;
}
.brf-textarea-box{
  position: relative;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 46rpx;
}
.brf-textarea{
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #F7F7F7;
  border: 20rpx;
  width: 100%;
  height: 240rpx;
}
.brf-textarea-counter{
  position: absolute;
  right: 30rpx;
  bottom: 0rpx;
  line-height: 30rpx;
}
.brf-input{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #F7F7F7;
  width: 100%;
  height: 90rpx;
  line-height: 50rpx;
  border-radius: 15rpx;
}

.brf-phone-box{
  text-align: center;
  align-items: center;
  width: 400rpx;
  margin-top: 60rpx;
  margin-left: 175rpx;
}
.brf-phone-img{
  width: 24rpx;
  height: 26rpx;
  margin-right: 20rpx;
}
.brf-bottom-box{
  width: 750rpx;
  position: fixed;
  background-color: #fff;
  padding: 30rpx 30rpx 60rpx;
  box-sizing: border-box;
  bottom: 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  z-index: 999;
}