/* pages/returnSuccess/returnSuccess.wxss */
.rs-box{
  background-color: #F8F6F9;
  box-sizing: border-box;
}
.rs-cell-top-box{
  height: 50%;
  background: linear-gradient( #FFC002, #F8F6F9);
  padding: 30rpx 30rpx;
}
/* top样式 */
.rs-cell-top-title{
  margin-bottom: 38rpx;
  box-sizing: border-box;
  position: relative;
}
.rs-cell-top-img,.rs-cell-top-text{
  display: inline-block;
}
.rs-cell-top-img image{
  width: 124rpx;
  height: 124rpx;
}
.rs-cell-top-text{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 158rpx;
}
.rs-cell-top-main{
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 60rpx;
}
.rs-cell-top-vice{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 52rpx;
}

/* 说明 */
.rs-cell-content-text{
  display: flex;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

/* 按钮 */
.rs-cell-bottom-btn{
  margin-bottom: 38rpx;
}

/* 底部背景图 */
.rs-cell-img-box{
  position: fixed;
  bottom: 50rpx;
  left: 30rpx;
  width: 690rpx;
}
.rs-cell-img{
  width: 690rpx;
}

.rs-cell-content-box{
  min-height: 460rpx;
  background: #FFFFFF;
  border-radius: 8px;
  padding:30rpx 30rpx 30rpx 30rpx;
  position: relative;
  text-align: center;
}
/* 计费规则样式 */
.rs-cell-content-text{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}
.content {
  position: relative;
  margin-bottom: 61rpx;
}
.content.flag::after{
  content: '限时优惠';
}
.content.flagfree::after{
  content: '限时免费';
}
.content.flag::after,.content.flagfree::after{
  /* content: '限时优惠'; */
  position: absolute;
  width:116rpx;
  height:32rpx;
  line-height: 32rpx;
  text-align: center;
  background:rgba(255,77,106,1);
  border-radius:10rpx 10rpx 10rpx 0;
  font-size:22rpx;
  color: #fff;
  top: -22rpx;
}
.content::before{
  content: ' ';
  display: inline-table;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: -20rpx;
  width:8rpx;
  height:8rpx;
  background:#FFC002;
  border-radius:50%;
}

.rs-cell-bottom-box{
  padding: 30rpx 30rpx 30rpx 30rpx;
  width: 630rpx;
  box-sizing: border-box;
  text-align: center;
  
}
.rs-cell-bottom-protocol{
  width: 100%;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 58rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.rs-cell-bottom-protocol-txt{
  color: #1C91F2;
}