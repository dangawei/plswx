/* pages/myOrder/myOrder.wxss */
.mo-box{
  background-color: #F8F8F8;
}
.mo-top-box{
  width: 750rpx;
  height: 258rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 50rpx 30rpx;
}
.mo-top-bgi{
  width: 690rpx;
  height: 158rpx;
  position: relative;
}
.mo-top-bgi image{
  width: 100%;
  height: 100%;
}

.mo-tab-box{
  margin-bottom: 20rpx;
}
.mo-tb-left{
  width: 230rpx;
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  z-index: 99;
}
.mo-tb-left-img{
  text-align: center;
}
.mo-tb-left-img image{
  width: 55rpx;
  height: 24rpx;
}
.mo-tb-left-text{
  margin-left: 10rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFB507;
}
.mo-tb-left-bottom{
  color: #BABCCD;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #BABCCD;
  line-height: 34rpx;
  text-align: center;
  margin: 8rpx;
}
.mo-tb-right{
  width: 230rpx;
  position: absolute;
  top: 30rpx;
  left: 300rpx;
  z-index: 99;
  text-align: center;
  color: #fff;
  line-height: 96rpx;
  font-size: 36rpx;
  font-weight: 550;
}
.mo-tb-right-num{
  color: #D3A135;
  font-size: 58rpx;
}
/* 滑动列表样式 */
.pb-cell-vice-box{
  width: 690rpx;
  background: #FFFFFF;
  border-radius: 8px;
  padding: 20rpx 20rpx;
  margin-bottom:50rpx;
  box-sizing: border-box;
  margin-left: 30rpx;
  height: 200rpx;
}
.pb-cell-content-vice{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 80rpx;
  position: relative;
}
.pb-cell-content-both{
  margin-top: 50rpx;
  position: relative;
}
.pb-cell-cv-title{
  color: #999999;
}
.pb-cell-cv-detail{
  color: #333333;
}
.pb-cell-cv-btn{
  color: #333333;
  display: inline-block;
  border-radius: 20rpx;
  border: 2rpx solid #CCCCCC;
  padding: 2rpx 10rpx;
  position: absolute;
  right: 50rpx;
}
.pb-cell-cv-info{
  position: absolute;
  right: 28rpx;
}
.pb-cell-cv-img{
  width: 14rpx;
  position: absolute;
  right: 0rpx;
  top: 28rpx;
}
.border-bottom{
  border-bottom:2rpx solid #E5E5E5;
}